@using VirtuaBoxer.Shared.Boxers
<div class="card">
    <header class="card-header">
        <p class="card-header-title">
            @Boxer.Name Lvl. @Boxer.Level
        </p>
        <button class="card-header-icon" aria-label="more options">
            <span class="icon">
                <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
        </button>
    </header>
    <div class="card-image">
        <figure class="image is-4by3">
            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
    </div>
    <div class="card-content">
        <div class="content">
            <h1 class="card-subtitle is-size-4">@Boxer.Nickname</h1>
            <p>@Boxer.WeightClass</p>
            <p>@Boxer.Class</p>
        </div>
    </div>
    <footer class="card-footer">
        <a @onclick="NavigateToDetail" class="card-footer-item">View Boxer</a>
        <AuthorizeView Roles="Administrator">
            <a class="card-footer-item">Challenge To A Fight!</a>
        </AuthorizeView>    
    </footer>
</div>

@code {
    [Parameter] public BoxerDto.Index Boxer { get; set; }
    [Inject] public NavigationManager NavigationManager { get; set; }

    private void NavigateToDetail() {
        NavigationManager.NavigateTo($"boxer/{Boxer.Id}");
    }

}
